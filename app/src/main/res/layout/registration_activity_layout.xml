<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/darker_design"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Registration"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Email:"
        android:id="@+id/emailRegistrationActivity"
        android:background="@drawable/lighter_design"
        android:padding="10dp"
        android:textColorHint="@color/white"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Password:"
        android:inputType="textPassword"
        android:id="@+id/passwordRegistrationActivity"
        android:background="@drawable/lighter_design"
        android:padding="10dp"
        android:textColorHint="@color/white"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Registration"
        android:id="@+id/registrationButtonRegistrationActivity"
        android:textAppearance="?android:textAppearanceMedium"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/lighter_design"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account? Sign in here"
        android:gravity="center"
        android:padding="7dp"
        android:id="@+id/loginTextRegistrationActivity"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/white"
        />
</LinearLayout>